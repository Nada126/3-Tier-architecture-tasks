@using App2.BLL.ModelVM.Department
@model EditDepartmentVM

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">@SharedLocalizer["Edit Department"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Area"]</label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning me-2">@SharedLocalizer["Save Changes"]</button>
                    <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
