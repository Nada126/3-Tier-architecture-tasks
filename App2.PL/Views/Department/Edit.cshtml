@using App2.BLL.ModelVM.Department
@model EditDepartmentVM

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Edit Department"]</h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="fas fa-arrow-left"></i> @SharedLocalizer["Back to List"]
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Area"]</label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger small"></span>
            </div>

            <div class="col-12 text-center pt-3">
                <button type="submit" class="btn btn-warning text-white px-4 me-2">
                    <i class="fas fa-save"></i> @SharedLocalizer["Save Changes"]
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> @SharedLocalizer["Cancel"]
                </a>
            </div>
        </form>
    </div>
</div>