@using App2.BLL.ModelVM.Department
@model GetDepartmentVM

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@SharedLocalizer["Delete Department"]</h4>
        </div>
        <div class="card-body text-center">
            <p class="fs-5">@SharedLocalizer["Are you sure you want to delete"]<strong>@Model.Name</strong>?</p>
            <p>@SharedLocalizer["Area"]: <strong>@Model.Area</strong></p>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">@SharedLocalizer["Yes, Delete"]</button>
                <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Cancel"]</a>
            </form>
        </div>
    </div>
</div>
