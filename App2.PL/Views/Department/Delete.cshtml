@using App2.BLL.ModelVM.Department
@model GetDepartmentVM

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0 text-danger">@SharedLocalizer["Delete Department"]</h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="fas fa-arrow-left"></i> @SharedLocalizer["Back to List"]
        </a>
    </div>

    <div class="card-body">
        <div class="text-center">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @SharedLocalizer["Are you sure you want to delete this department?"]
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-md-6">
                    <div class="border rounded p-4 bg-light">
                        <h5 class="text-danger mb-3">@Model.Name</h5>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span class="fw-semibold">@SharedLocalizer["Area"]:</span>
                            <span>@Model.Area</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fas fa-trash"></i> @SharedLocalizer["Yes, Delete"]
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> @SharedLocalizer["Cancel"]
                </a>
            </form>
        </div>
    </div>
</div>