@model App2.BLL.ModelVM.Department.GetDepartmentVM

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Name Department</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">@SharedLocalizer["Back"]</a>
        </div>
        <div class="card-body">
            <p><strong>@SharedLocalizer["Area:"]</strong> @Model.Area</p>

            <h5 class="mt-4">@SharedLocalizer["Employees"]</h5>
            @if (Model.Employees != null && Model.Employees.Any())
            {
                <table class="table table-bordered table-hover mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["Name"]</th>
                            <th>@SharedLocalizer["Age"]</th>
                            <th>@SharedLocalizer["Salary"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model.Employees)
                        {
                            <tr>
                                <td>@emp.Name</td>
                                <td>@emp.Age</td>
                                <td>@emp.Salary</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-secondary">@SharedLocalizer["No employees found in this department."]</div>
            }
        </div>
    </div>
</div>
