@using App2.BLL.ModelVM.Department
@using App2.BLL.ModelVM.ResponseResult
@model Response<List<GetDepartmentVM>>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-Success">@SharedLocalizer["Departments"]</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
			<i class="fas fa-plus me-1"></i> @SharedLocalizer["Add Department"]
        </a>
    </div>

    @if (Model.result != null && Model.result.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["Name"]</th>
                            <th>@SharedLocalizer["Area"]</th>
                            <th class="text-end">@SharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dep in Model.result)
                        {
                            <tr>
                                <td class="fw-semibold">@dep.Name</td>
                                <td>@dep.Area</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-outline-info btn-sm me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@dep.Id" class="btn btn-outline-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@dep.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No departments found.</div>
    }
</div>
