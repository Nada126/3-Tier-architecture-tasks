@using App2.BLL.ModelVM.Department
@using App2.BLL.ModelVM.ResponseResult
@model Response<List<GetDepartmentVM>>

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Departments"]</h4>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i> @SharedLocalizer["Add Department"]
        </a>
    </div>

    <div class="card-body p-0">
        @if (Model.IsHaveErrorOrNot)
        {
            <div class="alert alert-danger text-center m-3">@Model.ErrorMessage</div>
        }
        else if (Model.result == null || !Model.result.Any())
        {
            <div class="alert alert-info text-center m-3">@SharedLocalizer["No departments found."]</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["Name"]</th>
                            <th>@SharedLocalizer["Area"]</th>
                            <th class="text-center">@SharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dep in Model.result)
                        {
                            <tr>
                                <td class="fw-semibold">@dep.Name</td>
                                <td>@dep.Area</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-sm btn-info text-white me-1">
                                        <i class="fas fa-eye"></i> @SharedLocalizer["View"]
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@dep.Id" class="btn btn-sm btn-warning text-white me-1">
                                        <i class="fas fa-edit"></i> @SharedLocalizer["Edit"]
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@dep.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> @SharedLocalizer["Delete"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>