@using App2.BLL.ModelVM.AccountVM
@model LoginVM

@if (TempData["AuthError"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["AuthError"]
    </div>
}

<div class="card shadow-sm border-0 mt-4 mx-auto" style="max-width: 500px;">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Login"]</h4>
        @* <a href="/" class="btn btn-light btn-sm">
            <i class="fas fa-home"></i> @SharedLocalizer["Home"]
        </a> *@
    </div>

    <div class="card-body">
        <!-- Error Message for Invalid Login -->
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors?.Count > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @ViewData.ModelState[string.Empty].Errors.First().ErrorMessage
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post" class="row g-3">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <!-- Username -->
            <div class="col-12">
                <label asp-for="UserName" class="form-label fw-semibold">@SharedLocalizer["UserName"]</label>
                <input asp-for="UserName" class="form-control" placeholder="@SharedLocalizer["Enter username"]" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="col-12">
                <label asp-for="Password" class="form-label fw-semibold">@SharedLocalizer["Password"]</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="@SharedLocalizer["Enter password"]" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Submit -->
            <div class="col-12 pt-3">
                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="fas fa-sign-in-alt me-2"></i> @SharedLocalizer["Login"]
                </button>
            </div>
        </form>
    </div>

    <div class="card-footer text-center bg-light">
        <small class="text-muted">
            @SharedLocalizer["Don't have an account?"]
            <a asp-action="Register" asp-controller="Account" class="text-primary text-decoration-none">
                @SharedLocalizer["Register here"]
            </a>
        </small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}