@using App2.BLL.ModelVM.AccountVM
@model LoginVM

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 w-50">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"> @SharedLocalizer["Login"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Login" asp-controller="Account" method="post">

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-semibold"> @SharedLocalizer["UserName"]</label>
                    <input asp-for="UserName" class="form-control" placeholder=" @SharedLocalizer["Enter username"]" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"> @SharedLocalizer["Password"]</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder=" @SharedLocalizer["Enter password"]" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary"> @SharedLocalizer["Login"]</button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <small> @SharedLocalizer["Don't have an account?"] <a asp-action="Register" asp-controller="Account"> @SharedLocalizer["Register here"]</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

