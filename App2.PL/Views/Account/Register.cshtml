@using App2.BLL.ModelVM.AccountVM
@model RegisterEmployeeVM

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 w-50">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0">@SharedLocalizer["Create Account"]</h4>
        </div>

        <div class="card-body">
            <form asp-action="Register" asp-controller="Account" enctype="multipart/form-data">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["UserName"]</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="@SharedLocalizer["Enter username"]">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Password"]</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="@SharedLocalizer["Enter password"]">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Confirm Password"]</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@SharedLocalizer["Confirm employee password"]">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="@SharedLocalizer["Enter employee name"]">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Salary"]</label>
                    <input asp-for="Salary" type="text" class="form-control" placeholder="@SharedLocalizer["Enter salary"]">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Age"]</label>
                    <input asp-for="Age" type="number" class="form-control" placeholder="@SharedLocalizer["Enter Age"]">
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Department"]</label>
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                        <option value="">-- @SharedLocalizer["Select Department"] --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
 
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Profile Image"]</label>
                    <input asp-for="Image" type="file" class="form-control" onchange="previewImage(event)">
                    <span asp-validation-for="Image" class="text-danger"></span>

                    <img id="preview" src="/Files/default.jpg" class="img-thumbnail mt-2" style="width: 100px; display:none;" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">@SharedLocalizer["Sign up"]</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = 'inline-block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '/Files/default.jpg';
                preview.style.display = 'inline-block';
            }
        }
    </script>
}
