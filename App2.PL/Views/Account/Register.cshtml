@using App2.BLL.ModelVM.AccountVM
@model RegisterEmployeeVM

<div class="card shadow-sm border-0 mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Create Account"]</h4>
       @*  <a href="/" class="btn btn-light btn-sm">
            <i class="fas fa-home"></i> @SharedLocalizer["Home"]
        </a> *@
    </div>

    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="Register" asp-controller="Account" enctype="multipart/form-data" class="row g-3">
            <!-- Image Preview -->
            <div class="col-12 text-center mb-3">
                <img id="preview" src="/Files/default.jpg"
                     class="rounded-circle shadow-sm"
                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid var(--border-color);" />
            </div>

            <!-- Username -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["UserName"]</label>
                <input asp-for="UserName" type="text" class="form-control" placeholder="@SharedLocalizer["Enter username"]">
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <!-- Name -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="@SharedLocalizer["Enter employee name"]">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Password"]</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="@SharedLocalizer["Enter password"]">
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Confirm Password"]</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@SharedLocalizer["Confirm employee password"]">
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Age -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Age"]</label>
                <input asp-for="Age" type="number" class="form-control" placeholder="@SharedLocalizer["Enter Age"]">
                <span asp-validation-for="Age" class="text-danger small"></span>
            </div>

            <!-- Salary -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Salary"]</label>
                <input asp-for="Salary" type="text" class="form-control" placeholder="@SharedLocalizer["Enter salary"]">
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>

            <!-- Department -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Department"]</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                    <option value="">-- @SharedLocalizer["Select Department"] --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>

            <!-- Image -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Profile Image"]</label>
                <input asp-for="Image" type="file" class="form-control" onchange="previewImage(event)">
                <span asp-validation-for="Image" class="text-danger small"></span>
            </div>

            <!-- Submit -->
            <div class="col-12 text-center pt-3">
                <button type="submit" class="btn btn-primary px-4 me-2">
                    <i class="fas fa-user-plus me-2"></i> @SharedLocalizer["Sign up"]
                </button>
                <a asp-action="Login" class="btn btn-secondary px-4">
                    <i class="fas fa-sign-in-alt me-2"></i> @SharedLocalizer["Back to Login"]
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '/Files/default.jpg';
            }
        }
    </script>
}