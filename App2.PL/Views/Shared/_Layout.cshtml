@using Microsoft.AspNetCore.Localization
@using System.Globalization

@{
    var culture = Thread.CurrentThread.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Employee Management</title>

    @if (isArabic)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    }

    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Employee")">@SharedLocalizer["Employee Management"]</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navItems">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navItems">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Department")">@SharedLocalizer["Departments"]</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Employee")">@SharedLocalizer["Employees"]</a>
                </li>

                <!-- Language Switch -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button"
                       data-bs-toggle="dropdown">@SharedLocalizer["Language"]</a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("SetLanguage", "Home", new { culture = "en-US", returnUrl = Context.Request.Path + Context.Request.QueryString })">
                                🇬🇧 English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("SetLanguage", "Home", new { culture = "ar-EG", returnUrl = Context.Request.Path + Context.Request.QueryString })">
                                🇪🇬 العربية
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- User Menu Placeholder -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown"
                       role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user text-white"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-item">
                            <form asp-controller="Account" asp-action="Signout" method="post">
                                <button type="submit" class="btn btn-link text-dark w-100 text-start p-0">
                                    <i class="fas fa-sign-out-alt me-2"></i> @SharedLocalizer["Logout"]
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <main class="flex-fill container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white text-center py-3 mt-auto">
        <small>&copy; 2025 Employee Management</small>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>