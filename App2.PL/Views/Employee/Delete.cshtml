@model App2.BLL.ModelVM.Employee.GetEmployeeVM

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 w-50">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">@SharedLocalizer["Delete Employee"]</h4>
        </div>

        <div class="card-body text-center">
            <p>@SharedLocalizer["Are you sure you want to delete"]<strong>@Model.Name</strong>?</p>

            <img src="~/Files/@(string.IsNullOrEmpty(Model.Image) ? "default.jpg" : Model.Image)"
                 alt="@Model.Name" class="img-thumbnail mb-3" style="max-width: 120px; border-radius: 50%;" />

            <form asp-action="DeleteConfirmed" asp-controller="Employee" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger px-4 me-2">@SharedLocalizer["Yes, Delete"]</button>
                <a asp-action="Index" class="btn btn-secondary px-4">@SharedLocalizer["Cancel"]</a>
            </form>
        </div>
    </div>
</div>
