@using App2.BLL.ModelVM.Employee
@using App2.BLL.ModelVM.ResponseResult
@model Response<List<GetEmployeeVM>>

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Employees List"]</h4>
        @* <a class="btn btn-light btn-sm" href="@Url.Action("Create", "Employee")">
            <i class="fas fa-plus"></i> @SharedLocalizer["Add Employee"]
        </a> *@
    </div>

    <div class="card-body p-0">
        @if (Model.IsHaveErrorOrNot)
        {
            <div class="alert alert-danger text-center m-3">@Model.ErrorMessage</div>
        }
        else if (Model.result == null || Model.result.Count == 0)
        {
            <div class="alert alert-info text-center m-3">@SharedLocalizer["No employees found."]</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0 text-center">
                    <thead class="table-light">
                        <tr>
                            <th>@SharedLocalizer["Image"]</th>
                            <th>@SharedLocalizer["Name"]</th>
                            <th>@SharedLocalizer["Age"]</th>
                            <th>@SharedLocalizer["Salary"]</th>
                            <th>@SharedLocalizer["Department"]</th>
                            <th>@SharedLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model.result)
                        {
                            <tr>
                                <td>
                                    <img src="~/Files/@(string.IsNullOrEmpty(emp.Image) ? "default.jpg" : emp.Image)"
                                         class="rounded-circle shadow-sm"
                                         style="width:55px;height:55px;object-fit:cover;" />
                                </td>
                                <td>@emp.Name</td>
                                <td>@emp.Age</td>
                                <td>@emp.Salary</td>
                                <td>@(emp.DepartmentName ?? "--")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning text-white me-1">
                                        <i class="fas fa-edit"></i> @SharedLocalizer["Edit"]
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> @SharedLocalizer["Delete"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
