@using App2.BLL.ModelVM.Employee;
@using App2.BLL.ModelVM.Department;
@using App2.BLL.ModelVM.ResponseResult;
@model EditEmployeeVM

@* @{
    var departments = (Response<List<GetDepartmentVM>>)ViewBag.Departments;
} *@

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 w-50">
        <div class="card-header bg-warning text-white text-center">
            <h4 class="mb-0">@SharedLocalizer["Edit Employee"]</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Image Preview -->
                <div class="text-center mb-3">
                    <img id="preview" src="~/Files/@(Model.Image ?? "default.jpg")"
                         class="img-thumbnail shadow-sm"
                         style="max-width: 150px; border-radius: 50%; object-fit: cover;" />
                </div>

                <!-- Name -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Age -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Age"]</label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Salary"]</label>
                    <input asp-for="Salary" type="number" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Department -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Department"]</label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <!-- Image -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">@SharedLocalizer["Change Image"]</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="text-center">
                    <button type="submit" class="btn btn-warning text-white px-4 me-2">
                        <i class="fas fa-save"></i>@SharedLocalizer["Save Changes"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i>@SharedLocalizer["Cancel"]
                    </a>
                </div>
            </form>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
                <script>
                    function previewImage(event) {
                        const preview = document.getElementById('preview');
                        const file = event.target.files[0];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = e => preview.src = e.target.result;
                            reader.readAsDataURL(file);
                        }
                    }
                </script>
            }

  
