@using App2.BLL.ModelVM.Employee;
@using App2.BLL.ModelVM.Department;
@using App2.BLL.ModelVM.ResponseResult;
@model EditEmployeeVM

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@SharedLocalizer["Edit Employee"]</h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="fas fa-arrow-left"></i> @SharedLocalizer["Back to List"]
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <!-- Image Preview -->
            <div class="col-12 text-center mb-4">
                <img id="preview" src="~/Files/@(Model.Image ?? "default.jpg")"
                     class="rounded-circle shadow-sm"
                     style="width: 150px; height: 150px; object-fit: cover; border: 3px solid var(--border-color);" />
            </div>

            <!-- Name -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Age -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Age"]</label>
                <input asp-for="Age" type="number" class="form-control" />
                <span asp-validation-for="Age" class="text-danger small"></span>
            </div>

            <!-- Salary -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Salary"]</label>
                <input asp-for="Salary" type="number" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>

            <!-- Department -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">@SharedLocalizer["Department"]</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                    <option value="">@SharedLocalizer["Select Department"]</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>

            <!-- Image -->
            <div class="col-12">
                <label class="form-label fw-semibold">@SharedLocalizer["Change Image"]</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)">
                <span asp-validation-for="ImageFile" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="col-12 text-center pt-3">
                <button type="submit" class="btn btn-warning text-white px-4 me-2">
                    <i class="fas fa-save"></i> @SharedLocalizer["Save Changes"]
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> @SharedLocalizer["Cancel"]
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => preview.src = e.target.result;
                reader.readAsDataURL(file);
            }
        }
    </script>
}